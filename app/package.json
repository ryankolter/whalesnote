{
    "name": "whale_note",
    "description": "A note management tool for Windows, Mac and Linux. Easily classify and store tens of thousands of notes",
    "version": "1.0.0",
    "author": "ryankolter <zjuygp@gamil.com>",
    "license": "GPL",
    "private": true,
    "main": "main.js",
    "homepage": ".",
    "build": {
        "productName": "WhaleNote",
        "extends": null,
        "files": [
            "main.js",
            "build/**/*"
        ],
        "extraResources": [
            {
                "from": "../src/resources/dict/",
                "to": "extraResources/dict"
            },
            {
                "from": "../src/resources/css/",
                "to": "extraResources/css"
            }
        ],
        "npmRebuild": false
    },
    "dependencies": {
        "cson": "^7.20.0",
        "fs-extra": "^10.1.0",
        "nodejieba": "^2.6.0"
    },
    "scripts": {
        "electron": "electron .",
        "dist-win32": "electron-builder --win --ia32",
        "dist-win64": "electron-builder --win --x64",
        "dist-mac": "electron-builder --mac"
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "devDependencies": {
        "@types/cson": "^7.20.1",
        "@types/fs-extra": "^9.0.13",
        "electron": "^21.2.0",
        "electron-builder": "^23.6.0",
        "electron-devtools-installer": "^3.2.0"
    }
}

{
    "name": "whalenote",
    "description": "A note management tool for Windows, Mac and Linux. Easily classify and store tens of thousands of notes",
    "version": "1.0.0",
    "author": "ryankolter <zjuygp@gamil.com>",
    "license": "GPL",
    "private": true,
    "main": "main.js",
    "homepage": ".",
    "build": {
        "productName": "Whalenote",
        "extends": null,
        "files": [
            "main.js",
            "preload.js",
            "build/**/*",
            "!node_modules/nodejieba/dict/*"
        ],
        "extraResources": [
            {
                "from": "../src/resources/dict/",
                "to": "extraResources/dict"
            },
            {
                "from": "../src/resources/css/",
                "to": "extraResources/css"
            }
        ],
        "npmRebuild": false,
        "mac": {
            "icon": "../build/icon.png"
        },
        "win": {
            "icon": "../build/icon.png"
        },
        "linux": {
            "icon": "../build/icon.png"
        }
    },
    "dependencies": {
        "string-width": "^5.1.2",
        "cson": "^7.20.0",
        "fs-extra": "^10.1.0",
        "nodejieba": "^2.6.0"
    },
    "scripts": {
        "electron": "electron .",
        "dist-win32": "electron-builder --win --ia32",
        "dist-win64": "electron-builder --win --x64",
        "dist-mac": "electron-builder --mac"
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "devDependencies": {
        "electron": "^21.2.0",
        "electron-builder": "^23.6.0"
    }
}
